section.flex-block.flex-home-services
	//- h2 Services
	section.container-full
		- if (have_rows('services')) :
			.home-services-blocks
				- while (have_rows('services')) : the_row()
					.service-block(
						style="background-image:url('<?= get_sub_field('background_image')['url'] ?>');" )
						.service-block-content
							h3: - echo get_sub_field('service')
							p: - echo get_sub_field('description')
							a.button.button-ghost(
								href="<?= get_sub_field('link')['url'] ?>" target="<?= get_sub_field('link')['target'] ?>" 
								aria-label="<?= get_sub_field('background_image')['alt'] ?>") 
									- echo get_sub_field('service')
									//- |&nbsp;Services
				- endwhile
		- endif